<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="home_rb">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="room_pick_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="white_text_12sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="gray_text_12sp">
        <item name="android:textColor">@color/toolbartitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="gray_text_15sp">
        <item name="android:textColor">@color/toolbartitle</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="gray_text_14sp">
        <item name="android:textColor">@color/toolbartitle</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="gray_order_info">
        <item name="android:textColor">@color/gray_717171</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="light_gray_text_12sp">
        <item name="android:textColor">@color/textgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="gray_text_17sp">
        <item name="android:textColor">@color/toolbartitle</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="gray_text_13sp">
        <item name="android:textColor">@color/gray_717171</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="gray_text_25sp">
        <item name="android:textColor">@color/toolbartitle</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="gray_text_11sp">
        <item name="android:textColor">@color/gray666</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="fiveRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/five_rating_bar</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
    </style>
    
    <style name="filter_panel_checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/filter_panel_checkbox_selector</item>
        <item name="android:textColor">@drawable/filter_panel_tag_textcolor</item>
    </style>

    <style name="choose_checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/selector_check_box</item>
        <item name="android:textColor">@drawable/filter_panel_tag_textcolor</item>
    </style>

</resources>
