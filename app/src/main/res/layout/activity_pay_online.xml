<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:fitsSystemWindows="true"
    tools:context="com.example.admin.zgapplication.ui.activity.PayOnlineActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/toolbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:fitsSystemWindows="true"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/return_gray"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:text="支付详情"
                android:id="@+id/tv_title"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/toolbartitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="116dp">
            <TextView
                android:text="本次支付金额"
                android:textColor="@color/toolbartitle"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:text="¥ 1000"
            android:layout_marginTop="14dp"
            android:textColor="@color/toolbartitle"
            android:textSize="33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/activity_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="17dp"
        android:paddingTop="25dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="选择支付方式"
            android:textSize="18sp"
            android:textColor="@color/toolbartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="55dp">
            <ImageView
                android:src="@drawable/zhifubao"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:text="     支付宝支付"
                style="@style/gray_text_15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <CheckBox
                style="@style/choose_checkbox"
                android:layout_marginRight="10dp"
                android:layout_width="17dp"
                android:layout_height="17dp" />
        </LinearLayout>

        <View
            android:background="@color/divider_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="55dp">
            <ImageView
                android:src="@drawable/weixinzhifu"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:text="     微信支付"
                style="@style/gray_text_15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                style="@style/choose_checkbox"
                android:layout_marginRight="10dp"
                android:layout_width="17dp"
                android:layout_height="17dp" />
        </LinearLayout>
        
    </LinearLayout>

    <View
        android:background="@color/activity_bg"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/tv_pay"
        android:background="@color/green"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="支付"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>
