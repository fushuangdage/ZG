<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        >
        <ImageView
            android:id="@+id/user_icon"
            android:src="@drawable/user_sit"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/tv_user_name"
            android:textSize="15sp"
            android:textColor="#2a2e32"
            android:text="王代伟"

            android:layout_toRightOf="@id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="带看评价"
            android:textSize="12sp"
            android:layout_toRightOf="@id/user_icon"
            android:layout_below="@id/tv_user_name"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_publish_time"
            android:text="08月15日"
            android:textSize="11sp"
            android:textColor="#aaa"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.admin.zgapplication.ui.view.StartBar
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_publish_time"
            android:layout_marginTop="8dp"
            android:layout_width="100dp"
            android:layout_height="13dp" />



    </RelativeLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flow_layout"
        android:layout_below="@id/user_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:id="@+id/tv_evaluate_content"
        android:text="房子很大，也很安静，回去跟朋友商量准备签约，非常满意卧室超级大，很干净，回去跟朋友商量准备签约。"
        style="@style/gray_text_12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_good"
            android:src="@drawable/userful"
            android:layout_width="14dp"
            android:layout_height="14dp" />
        <TextView
            android:id="@+id/tv_useful_count"
            android:textColor="#ccc"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="有用  (2)"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>