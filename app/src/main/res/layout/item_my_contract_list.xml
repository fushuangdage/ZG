<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_room_name"
        style="@style/gray_text_14sp"
        android:text="朝阳区北京像素北区1号楼1单元1006主卧"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_status"
        android:textSize="12sp"
        android:text="履行中"
        android:layout_alignParentRight="true"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_room"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_room_name"
        android:background="@drawable/house_sit"
        android:layout_width="100dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:id="@+id/ll_tv"
        android:layout_marginTop="10dp"
        android:paddingLeft="13dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_room"
        android:layout_below="@id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_no"
            android:textSize="14sp"
            android:textColor="@color/textgray"
            android:text="BJZG10201020201010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_data"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textgray"
            android:text="2017-03-20至2018-03-19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_price"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textgray"
            android:text="3000元/月 押一付三"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_tv"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="支付房租"
            style="@style/gray_text_14sp"
            android:textColor="@color/green"
            android:background="@drawable/green_border_bg"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_fix_online"
            android:text="在线报修"
            android:gravity="center"
            style="@style/gray_text_14sp"
            android:background="@drawable/white_ract_border_bg"
            android:layout_width="160dp"
            android:layout_height="40dp" />


    </LinearLayout>

</RelativeLayout>