<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/rl_wait_crab_content"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/returnwhite" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="匹配意向"
                android:textColor="@color/toolbartitle"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

        <com.example.admin.zgapplication.ui.view.CustomProgressView
            android:id="@+id/progress_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="15dp"
            android:layout_below="@id/progress_bar"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv"
            android:layout_below="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="#666e70"
            android:text="经纪人正在抢单，请稍候~"
            />

        <LinearLayout
            android:layout_below="@+id/tv"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="取消抢单"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginLeft="20dp"
                android:text="查看抢单"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_up"
                android:background="@drawable/up_arrow"
                android:layout_centerHorizontal="true"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_up"
                android:text="向上滑动可查看推荐"
                android:textColor="#2a2e32"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/mask_view"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/rl_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#954"
        android:layout_marginTop="23dp"
        app:layout_behavior="@string/up_panel_behavior">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:text="123"
               android:layout_width="match_parent"
               android:layout_height="500dp" />
           <TextView
               android:text="123"
               android:layout_width="match_parent"
               android:layout_height="500dp" />
           <TextView
               android:text="123"
               android:layout_width="match_parent"
               android:layout_height="500dp" />
           <TextView
               android:text="123"
               android:layout_width="match_parent"
               android:layout_height="500dp" />
           <TextView
               android:text="123"
               android:layout_width="match_parent"
               android:layout_height="500dp" />
       </LinearLayout>


    </android.support.v4.widget.NestedScrollView>




</android.support.design.widget.CoordinatorLayout>