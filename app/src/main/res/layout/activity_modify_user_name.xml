<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/activity_bg"
    tools:context="com.example.admin.zgapplication.ui.activity.ModifyUserNameActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/toolbar"
        >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/return_gray"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:text="修改头像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/iv_right"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <EditText
        android:id="@+id/et_new_nick"
        android:background="@color/white"
        android:gravity="center"
        android:hint="请输入您的新昵称"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        style="@style/gray_text_12sp"
        android:layout_margin="10dp"
        android:text="最多10个字符，仅支持中文、英文大小写、数字及其组合"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
