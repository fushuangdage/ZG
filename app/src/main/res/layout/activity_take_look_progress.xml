<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/activity_bg"
    tools:context="com.example.admin.zgapplication.ui.activity.TakeLookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/return_gray"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:text="预约带看"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>


    <LinearLayout
        android:background="@drawable/yiquxiao"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="64dp">

        
        <ImageView
            android:background="@drawable/naozhong"
            android:layout_margin="10dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <TextView
            android:id="@+id/tv_status"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="大秘待确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include layout="@layout/item_recommend_house" />

    <View
        android:background="@color/activity_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:text="带看信息"
        android:background="@color/white"
        style="@style/gray_text_17sp"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="14dp"
            style="@style/gray_text_13sp"
            android:text="联系人: "
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_custom_name"
            android:text="top"
            android:padding="14dp"
            style="@style/gray_text_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="14dp"
            style="@style/gray_text_13sp"
            android:text="联系电话: "
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tel"
            android:text="15165123"
            android:padding="14dp"
            style="@style/gray_text_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="14dp"
            style="@style/gray_text_13sp"
            android:text="期望带看时间: "
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_expect_time"
            android:text="1994-666--6666"
            android:padding="14dp"
            style="@style/gray_text_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/activity_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:text="带看经纪人"
        style="@style/gray_text_17sp"
        android:padding="14dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_agent_icon"
            android:layout_centerVertical="true"
            android:background="@drawable/user_sit"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            style="@style/gray_text_15sp"
            android:text="王代伟"
            android:id="@+id/tv_agent_name"
            android:layout_toRightOf="@id/iv_agent_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="链家地产"
            android:id="@+id/tv_agent_company"
            android:layout_toRightOf="@id/iv_agent_icon"
            android:layout_below="@id/tv_agent_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/activity_bg"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_confirm"
            android:text="确认带看"
            android:gravity="center"
            android:textColor="@color/green"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/green_border_bg"
            android:layout_width="83dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_toLeftOf="@id/tv_confirm"
            android:text="取消带看"
            android:gravity="center"
            android:textColor="#aaa"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_round_boder"
            android:layout_width="83dp"
            android:layout_height="30dp" />


    </RelativeLayout>

</LinearLayout>
