<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:text="房源类型"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_house_source_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="酒店式公寓"
            style="@style/filter_panel_checkbox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="小区式公寓"
            style="@style/filter_panel_checkbox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:text="出租方式"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_house_rent_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="整租"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="合租"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
           />
    </LinearLayout>



    <TextView
        android:text="居室"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_room_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="1居室"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="2居室"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="2居室"
            style="@style/filter_panel_checkbox"
            android:padding="10dp" />

        <CheckBox
            android:text="4居室"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-290dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="5居室"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            />

    </LinearLayout>


    <TextView
        android:text="特色配置"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_house_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="独立阳台"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="卫生间"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="空调"
            style="@style/filter_panel_checkbox"
            android:padding="10dp" />


        <CheckBox
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-290dp"
            android:text="WIFI"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="电视"
            android:layout_marginTop="50dp"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:text="微波炉"
            android:layout_marginTop="50dp"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
           />

        <CheckBox
            android:layout_marginTop="100dp"
            android:layout_marginLeft="-290dp"
            android:text="微波炉"
            style="@style/filter_panel_checkbox"
            android:padding="10dp"
            android:layout_marginRight="25dp"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="155dp"
            android:layout_height="36dp"
            android:text="重置"
            android:layout_marginLeft="5dp"
            android:background="#ff725c"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_alignParentEnd="true"
            android:layout_width="155dp"
            android:layout_height="36dp"
            android:text="确定"
            android:layout_marginRight="5dp"
            android:background="#4dad01"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"/>

    </RelativeLayout>


</LinearLayout>