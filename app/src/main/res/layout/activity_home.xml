<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.zgapplication.ui.activity.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dp">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f9f9f9"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/mine"
                android:layout_width="28dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mine" />

            <RadioGroup
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_findPerson"
                    style="@style/home_rb"
                    android:background="@drawable/select_home_radio_left"
                    android:button="@null"
                    android:checked="true"
                    android:text="找人"
                    android:textColor="@drawable/home_rg_text" />

                <RadioButton
                    android:id="@+id/rb_findHouse"
                    style="@style/home_rb"
                    android:background="@drawable/select_home_radio_right"
                    android:button="@null"
                    android:text="找房"
                    android:textColor="@drawable/home_rg_text" />
            </RadioGroup>

            <ImageView
                android:id="@+id/home_find"
                android:layout_marginRight="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/search" />

            <ImageView
                android:id="@+id/home_message"
                android:layout_marginRight="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/msg" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/scan_bg"
            >
            <View
                android:layout_marginRight="10dp"
                android:background="@drawable/scan"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:textSize="12sp"
                android:text="扫一扫"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_red_packet"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/redpacket"
            android:layout_width="52dp"
            android:layout_height="45dp" />





    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/home_navigationView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/home" />

</android.support.v4.widget.DrawerLayout>
