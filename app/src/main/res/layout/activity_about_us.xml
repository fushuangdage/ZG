<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.admin.zgapplication.ui.activity.AboutUsActivity">

    <include layout="@layout/action_bar" />

    <ImageView
        android:layout_marginTop="20dp"
        android:background="@drawable/zhagen_logo"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:text="扎根网"
        android:textSize="25sp"
        android:textColor="@color/green"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="V2.0"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_company"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="公司介绍"
            style="@style/gray_text_14sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@drawable/right_arrow"
            android:layout_marginRight="10dp"
            android:layout_width="8dp"
            android:layout_height="15dp" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="扎根官网"
            style="@style/gray_text_14sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_official_website"
            android:text="55555"
            android:gravity="center"
            style="@style/gray_text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="扎根微信"
            style="@style/gray_text_14sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_wx"
            android:text="weixin"
            android:gravity="center"
            style="@style/gray_text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="扎根客服"
            style="@style/gray_text_14sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_customer_service"
            android:text="55555"
            android:gravity="center"
            style="@style/gray_text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="合作热线"
            style="@style/gray_text_14sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_cooperation_hotline"
            android:text="55555"
            android:gravity="center"
            style="@style/gray_text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>






</LinearLayout>
