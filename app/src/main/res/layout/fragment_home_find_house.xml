<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.zgapplication.ui.fragment.HomeFindHouseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <LinearLayout
            android:id="@+id/ll_region"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                style="@style/gray_text_12sp"
                android:text="区域  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/choose_arrow_down"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_rent"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                style="@style/gray_text_12sp"
                android:text="租金  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/choose_arrow_down"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sort"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                style="@style/gray_text_12sp"
                android:text="排序  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/choose_arrow_down"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_filter"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                style="@style/gray_text_12sp"
                android:text="筛选  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/choose_gray"/>
        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
